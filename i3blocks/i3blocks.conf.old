[disk_usage]
# command=~/.config/i3blocks/disk_usage/disk_usage.sh
command=df -h / | awk '/\//{ printf(" ğŸ’¾ %4s/%s \n", $4, $2) }'
interval=1
markup=pango
format=<span font_weight='bold'>My Config:</span> <span image='~/Downloads/hard-drive-solid.svg' /></span> $output
color=#a8e201


[ram_usage]
command=free -h | awk 'NR==2{print "ï‡€ " $3"/"$2}'
interval=1
color=#d8e201


[Charging status]
command=cat /sys/class/power_supply/BAT0/status
interval=1
color=#ff9933

[Battery]
command=cat /sys/class/power_supply/BAT0/capacity | awk '{print "ï‰‚ " $0}'
interval=1
color=#ff6833 

[cpu_usage]
command=mpstat 1 1 | awk '/Average:/ {print"ï‹› " 100 - $NF "%"}'
interval=1
markup=pango
format=<span font_family='FontAwesome'>ï‹›</span> CPU: $output
color=#e2a501


[volume]
command=amixer get Master | awk -F '[][]' 'END{ print"ï€ " $2 }'
interval=1
color=#01e23b

[Screen Brightness]
[brightness]
